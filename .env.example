PERPLEXITY_MODEL=sonar-pro

# Gemini Configuration (for writing)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# Reve.com API Configuration (for thumbnail generation)
